      )
  </insert>
 
  <update id="updateByPrimaryKeySelective" parameterType="com.medusa.bhsq.entity.Article" >
    update article
    <set >
      <if test="title != null" >
        title = #{title,jdbcType=VARCHAR},
      </if>
