    values (#{id,jdbcType=INTEGER}, #{title,jdbcType=VARCHAR}, #{visitor,jdbcType=INTEGER}, 
      #{userid,jdbcType=INTEGER}, #{type,jdbcType=INTEGER}, #{time,jdbcType=TIMESTAMP}, 
