/**app.wxss**/
.container {
  overflow: hidden;
  width: 100%;
  min-height: 100%;
  font-family: '冬青黑体简体中文';
  font-size: 18px;
} 

.fl{
  float: left;
}
.fr{
  float: right;
}

.clear{
  clear: both;
}
.hover{
  background-color: #ccc;
}
.interval{
  width: 100%;
  height: 40rpx;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  background-color: #f4f4f4; 
}
.signBox{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: black;
  top:0;
  left: 0;
  opacity:0.5;
}
.blue{
    color: #1e8be8;
}
.red{
  color: red;
}
.blueBorder{
     color: #1e8be8;
     border:1px solid #1e8be8;
}
.blackBorder{
    border: 1px solid #616161;
    color: #616161;
}
.signSuccess{
  position: fixed;
  left: 32%;
  top: 30%;
  width: 150px;
  height: 150px;
  background-color: black;
  border-radius: 8px;
  opacity: 0.5;
}
.SuccessImg image{
  width: 50px;
   height: 40px;
   padding: 10px 0;
}
.SuccessImg{
  text-align: center;
  line-height: 35px;
  width: 150px;
  height: 150px;
  position: fixed;
  left: 32%;
  top: 30%;
  color: #fff;
}
/*end signSuccess*/

.joinText textarea{
  width: 690rpx;
  min-height: 790rpx;
}


